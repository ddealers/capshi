*{
    margin: 0;
    padding: 0;
}
html{
    height: 100%;
    width: 100%;
    overflow-x: hidden;
    body {
        height: 100%;
        width: 100%;
        overflow-x: hidden;
        font-family: "PT Sans", Helvetica, Arial, sans-serif;
        .navigation {
            position: fixed;
            width: 100%;
            list-style: none;
            background: url("/img/fondo-menu.png");
            background-size: cover;
            background-repeat: no-repeat;    
            display: -webkit-box;
            display: -moz-box;display: -ms-flexbox;
            display: -webkit-flex;
            display: flex;
            -webkit-flex-flow: row wrap;
            justify-content: flex-end;
            z-index: 2;
            box-shadow: -7px -1px 21px;
            height: 100px;
            align-items: center;
            @media screen and (max-width: 640px){
                height: 60px;
                justify-content: center;
            }
            a {
                text-decoration: none;
                display: block;
                padding: 1em;
                color: white;
                font-family: arial;
                text-align: center;
                font-size: 20px;
                text-shadow: 0px 3px 3px rgba(0, 0, 0, 0.6); 
                &:hover {
                    color: darken(#448C42, 2%);
                    text-shadow: 0px 3px 3px rgba(255, 255, 255, 0.6);                  
                }
                @media screen and (max-width: 640px){
                    font-size: 11px;
                }
            }
        }
        .part-1{
            position: relative;
            width: 100%;
            height: 100%;
            background: url("/img/Family_Transparent1.png")no-repeat;
            background-size: cover;
            .container-part-1{
                justify-content: center;
                width: 100%;
                position: relative;
                top: 150px;
                height: auto;
                @media screen and (max-width: 640px){
                    top: 14%;
                    position: relative;
                }
                .title{
                    font-size: 45px;
                    text-align: left;
                    margin-left: 40px;
                    width: 45%;
                    line-height: 47px;
                    color: #308C6A;
                    padding-top: 100px;
                    font-family: avenir;
                    font-weight: bold;
                    border-bottom: 1px solid;
                    padding-bottom: 10px;
                    @media screen and (max-width: 640px){
                        width: 80%;
                        font-size: 40px;
                        text-align: center;
                        left: 0;
                        right: 0;
                        margin: auto;
                    }
                }          
                #tex-1{
                    font-size: 42px;
                    text-align: left;
                    padding-left: 40px;
                    width: 45%;
                    line-height: 47px;
                    color: #1d4a53;
                    padding-top: 10px;
                    font-family: avenir;
                    font-weight: 100;
                    padding-bottom: 20px;
                    @media screen and (max-width: 640px){
                        font-size: 30px;
                        text-align: center;
                        width: 80%;
                        line-height: 35px;
                    }
                }
            }
        }
        .part-2{
            position: relative; 
            width: 100%;
            height: 100%;
            background: url("/img/manos-fam.png") center fixed no-repeat;
            background-size: cover;
            box-shadow: inset 0 1px 10px rgba(0,0,0,0.5),inset 0 -1px 10px rgba(0,0,0,0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            @media screen and (max-width: 640px){
                background-imge: url("/img/manos-fam.png") center no-repeat;
            }
            .quienes-somos{ 
                display: flex;         
                position: relative;
                width: 550px;
                height: 550px;
                border-radius: 50%;
                background: rgba(0,0,0,0.69);
                padding: 10px;
                top: 20px;
                @media screen and (max-width: 640px){
                    width: 100%;
                    height: 100%;
                    border-radius: 0px;
                    overflow: hidden;
                    position: relative;
                    padding: 0px;
                    top: 0;
                }   
                #logo{
                    position: absolute;
                    left: 36%;
                    width: 160px;
                    height: 160px;
                    padding: 0;
                    top: 60px;
                    border-radius: 50%;
                    border: solid 3px #fff
                    @media screen and (max-width: 640px){
                        left: 0;
                        right: 0;
                        margin: auto;
                        top: 8%;
                        display: block;
                        margin-bottom: 10%;
                    }              
                }
                #tex-3{
                    position: relative;
                    top: 65px;
                    width: 80%;
                    text-align: justify;
                    font-size: 18px;
                    color: #fff;
                    margin: auto;
                    line-height: 1.7em;
                    @media screen and (max-width: 640px){
                        width: 80%;
                        text-align: center;
                        line-height: 25px;
                        font-size: 12px;
                        padding-top: 50px;
                    }
                }
            }
        }
        .part-3{
            position: relative;
            width: 100%;
            height: 100%;
            background: url("../img/fondo22.jpg") 0px -164px fixed;
            background-size: cover;
            background-repeat: no-repeat;
            display: flex;
            @media screen and (max-width: 768px){
                background: url("../img/fondo22.jpg") center fixed;
            }
            .que-ofrecemos{
                position: relative;
                width: 550px;
                height: 550px;
                border-radius: 50%;
                background: rgba(0,0,0,0.69);
                top: 30px;  
                margin: auto;
                @media screen and (max-width: 640px){
                    width: 100%;
                    height: 100%;
                    border-radius: 0px;
                    top: 0;
                }
                .serv{
                    text-align: center;
                    width: 100%;
                    font-size: 45px;
                    margin-top: 15%;
                    color: #308c6a;
                    @media screen and (max-width: 640px){
                        font-size: 39px;
                    }
                }
                #tex-4{
                    position: relative;
                    top: 10px;
                    width: 80%;
                    text-align: justify;
                    font-size: 18px;
                    color: #fff;
                    line-height: 1.7em;
                    margin: auto;

                    @media screen and (max-width: 640px){
                        text-align: center;
                        width: 80%;
                        line-height: 25px;
                        font-size: 11px;
                        padding: 0;
                    }
                }
            }
        }
        .part-4{
            position: relative;
            width: 100%;
            min-height: 100%;
            background: url("/img/fondo2.jpg")no-repeat fixed;
            background-size: cover;
            box-shadow: inset 0 1px 10px rgba(0,0,0,0.5),inset 0 -1px 10px rgba(0,0,0,0.5);
            h1 {
                text-align: center;
                width: 100%;
                font-size: 45px;
                color: #308c6a;
                padding-top: 110px;
                @media screen and (max-width: 640px){
                    font-size: 39px;
                    padding-top: 80px;
                }
            }
            .terapias{
                padding-top: 20px;
                #des-humano{
                    width: 100%;
                    text-align: center;
                    font-size: 20px;
                    font-style: italic;
                } 
                .flex-container-des-humano {
                    list-style: none;
                    display: -webkit-box;
                    display: -moz-box;
                    display: -ms-flexbox;
                    display: -webkit-flex;
                    display: flex;
                    -webkit-flex-flow: row wrap;
                    justify-content: center;
                    width: 60%;
                    margin: 20px auto;
                    @media screen and (max-width: 640px){
                        width: 90%;
                    }
                }
                #te-alternas{
                    width: 100%;
                    text-align: center;
                    font-size: 20px;
                    font-style: italic;
                }
                .flex-container-ter-alter{
                    list-style: none;
                    display: -webkit-box;
                    display: -moz-box;
                    display: -ms-flexbox;
                    display: -webkit-flex;
                    display: flex;
                    -webkit-flex-flow: row wrap;
                    justify-content: center;
                    width: 60%;
                    margin: auto;
                    @media screen and (max-width: 640px){
                        width: 90%;
                    }
                }   
            }  
            .flex-item-ter-alte {
                flex: 0 20%;
                margin: 10px 0;
                @media screen and (max-width: 768px){
                    flex: 0 50%;
                }
                .icono-terapia{
                    display: block;
                    img {
                        width: 60%;
                        margin: auto;
                        display: block;
                        background-color: white;
                        padding: 3px 5px;
                        border-radius: 10px;
                    @media screen and (max-width: 640px){
                        width: 90%;
                        }
                    }
                }
            }
            .fondo-rgba{
                width: 100%;
                height: 100%;
                position: fixed;
                background: rgba(0,0,0,0.8);
                z-index: 1;
                top: 0;
                left: 0;
                display: none;
                opacity: 0;
                .info-terapias{
                    width: 550px;
                    height: 550px;
                    border-radius: 50%;
                    z-index: 2;
                    background: url("/img/fondo.contacto1.png") no-repeat center;
                    background-size: cover;
                    top: 100px;
                    margin: auto;
                    position: relative;
                    display: flex;
                    flex-flow: column nowrap;
                    align-items: center;
                    justify-content: flex-start;
                    padding-top: 60px;
                    box-sizing: border-box;
                    @media screen and (max-width 640px){
                        border-radius: 10px;
                        width: 80%;
                        top: 5%;
                        height: 76%;
                        padding-bottom: 5%;
                    } 
                    .im-cierre{
                        display: block;
                        width: 50px;
                        img {
                            width: 100%;
                            @media screen and (max-width: 640px){
                                margin-bottom: 20%;
                            }
                        }
                    }     
                    .titulo-terapia{
                        width: 70%;
                        font-size: 34px;
                        padding: 30px 0;
                        @media screen and (max-width: 640px){
                            padding: 10px 0;
                            width: 100%;
                            margin-bottom: 15px;
                            margin-bottom: 12%;
                        }
                    }
                    .cont-terapia{
                        width: 70%;
                        height: 180px;
                        text-align: justify;
                        overflow: scroll;
                        @media screen and (max-width: 640px){
                            width: 80%;
                            height: 300px;
                            text-align: left;
                            overflow-y: scroll;
                            overflow-x: hidden;
                        }
                        ul{
                            margin-left: 20px;
                        }
                    }    
                }
            }           
        }
        .contacto{
            position: relative;
            width: 100%;
            min-height: 80%;
            background: url("/img/fondo.menu1.png");
            background-size: cover;
            #tit-contacto {
                text-align: center;
                width: 100%;
                font-size: 45px;
                color: #308c6a;
                padding-top: 110px;
                @media screen and (max-width: 640px){
                    font-size: 39px;
                    padding-top: 80px;
                }
            }
            #tex-contacto{
                width: 100%;
                font-size: 17px;
                text-align: center;
                line-height: 1.7em;
                margin-bottom: 1em;
            }
            .formulario{
                width: 40%;
                margin: auto;
                padding: 10px;
                @media screen and (max-width: 640px){
                    width: 70%;
                }
                #dat-obli{
                    width: 100%;
                    margin: auto;
                    text-align: center;
                    top: 170px;
                    display: none;
                    color: red;
                    @media screen and (max-width: 640px){
                        font-size: 14px;
                    }
                }
                #name-text{
                    width: 100%;
                    border-radius: 10px;
                    border: 2px solid #4ba55b;
                    font-size: 18px;
                    padding: 10px;
                    margin: 5px auto;
                    color: #4ba55b;
                    box-sizing: border-box;
                    .rojo{
                        -webkit-input-placeholder: red;
                    }
                    @media screen and (max-width: 640px){
                        width: 100%;
                        top: 20px;
                    }
                }
                #mail-text{
                    width: 100%;
                    border-radius: 10px;
                    border: 2px solid #4BA55B;
                    font-size: 18px;
                    padding: 10px;
                    margin: 5px auto;
                    color: #4ba55b;
                    box-sizing: border-box;
                    .rojo{
                        -webkit-input-placeholder: red;
                    }
                    @media screen and (max-width: 640px){
                        width: 100%;
                        top: 90px
                    }
                }
                .form-select {
                    -moz-user-select: -moz-none;
                    -ms-user-select: none;
                    -webkit-user-select: none;
                    user-select: none;
                    background: #ffffff;
                    overflow: hidden;
                    border: 2px solid #4ba55b;
                    border-radius: 10px;
                    -moz-transition: box-shadow 0.2s;
                    -o-transition: box-shadow 0.2s;
                    -webkit-transition: box-shadow 0.2s;
                    transition: box-shadow 0.2s;
                    margin: 5px auto;
                    position: relative;
                    &:focus, 
                    &:hover {
                        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
                    }
                    &:after {
                        content: '▾';
                        position: absolute;
                        top: 0;
                        right: 12px;
                        color: #4ba55b;
                        line-height: 40px;
                        font-size: 18px;
                    }
                    #lista-terapias{
                        position: relative;
                        background: transparent;
                        background-image: none;
                        display: block;
                        width: 100%;
                        outline: none;
                        color: #4ba55b;
                        cursor: pointer;
                        border: none;
                        padding: 10px 10px 10px 5px;
                        text-overflow: '';
                        text-indent: 10px;
                        -moz-appearance: none;
                        -webkit-appearance: none;
                        font-size: 18px;
                        &:-moz-focusring {
                            color: transparent;
                            text-shadow: 0 0 0 #888888;
                        }
                            &::-ms-expand {
                            display: none;
                        }
                        option[disabled] {
                            color: #eeeeee;
                            text-shadow: none;
                            border: none;
                            font-size: 18px;
                        }
                    }    
                }
                #time-text{
                    width: 100%;
                    border-radius: 10px;
                    border: 2px solid #4BA55B;
                    font-size: 18px;
                    padding: 10px;
                    margin: 5px auto;
                    color: #4ba55b;
                    box-sizing: border-box;
                    .rojo{
                        -webkit-input-placeholder: red;
                    }
                    @media screen and (max-width: 640px){
                        width: 100%;
                        top: 90px
                    }
                }
                #boton-enviar{
                    width: 100px;
                    background-color: #4ba55b;
                    height: 20px;
                    border-radius: 10px;
                    text-decoration: none;
                    color: #fff;
                    text-align: center;
                    font-size: 18px;
                    margin: 15px auto;
                    padding: 9px;
                    display: block;
                }
            }
        }
        .social{
            width: 100%;
            .titleSocial{
                background-color: rgba(48,140, 106,0.4);
                width: 100%;
                p{
                    text-align: center;
                    padding: 10px 0;
                    font-size: 20px;
                }
            } 
            .iconSocial{
                background: #1D4A53;
                width: 100%;
                padding: 25px 25px 50px;
                display: flex;
                align-items: center;
                justify-content: space-around;
                box-sizing: border-box;
                @media screen and (max-width: 640px){
                    flex-flow: column nowrap;
                }
                .contentIcons{
                    flex: 0 30%;
                    a {
                        display: block;
                        text-decoration: none;
                        .phone{
                            text-align: left;
                            font-size: 20px;
                            background: url("../img/icono-call.png") no-repeat left center;
                            background-size: 45px;
                            color: #fff;
                            padding: 10px 55px;
                            width: 160px;
                            margin: auto;
                            @media screen and (max-width: 640px){
                                background-size: 30px;
                                padding: 13px 45px;
                                width: 80%;
                            }
                        }
                        .face{
                            text-align: left;
                            font-size: 20px;
                            background: url("../img/social-facebook.png") no-repeat left center;
                            background-size: 20px;
                            color: #fff;
                            padding: 10px 35px;
                            width: 90px;
                            margin: auto;
                            @media screen and (max-width: 640px){
                                background-size: 10px;
                                padding: 13px 25px;
                            }
                        }
                        .ubicacion{
                            text-align: left;
                            font-size: 20px;
                            background: url("../img/location.png") no-repeat left center;
                            background-size: 26px;
                            color: #fff;
                            padding: 10px 35px;
                            width: 90px;
                            margin: auto;
                            @media screen and (max-width: 640px){
                                background-size: 16px;
                                padding: 13px 25px;
                            }    
                        }
                    }
                }
            }
        }          
    }   
}                
